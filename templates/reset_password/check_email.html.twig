{% extends 'base.html.twig' %}
{% block title %}Password Reset Email Sent{% endblock %}
{% block main %}
    <!-- breadcrumbs-area-start -->
    <div class="breadcrumbs-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-content text-center">
                        <h2>Reset password</h2>
                        <ul>
                            <li><a href="/">Home /</a></li>
                            <li class="active"><a href="#">Reset password</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumbs-area-end -->
    <!-- shop-main-area-start -->
    <div class="shop-main-area">
        <!-- user-login-area-start -->
        <div class="user-login-area">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-8 col-md-12 col-12 ml-auto mr-auto">
                        <div class="login-form">
                            <div class="single-login">
                                <div>An email has been sent that contains a link that you can click to reset your password. This link will expire in {{ tokenLifetime|date('g') }} hour(s).</div>
                                <div>If you don't receive an email please check your spam folder or <a href="{{ path('app_forgot_password_request') }}" class="login-btn ">try again</a>.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- user-login-area-end -->
    </div>
    <!-- shop-main-area-end -->
{% endblock %}
