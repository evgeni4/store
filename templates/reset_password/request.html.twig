{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block main %}
    <!-- breadcrumbs-area-start -->
    <div class="breadcrumbs-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-content text-center">
                        <h2>Reset password</h2>
                        <ul>
                            <li><a href="/">Home /</a></li>
                            <li class="active"><a href="#">Reset password</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumbs-area-end -->
    <!-- shop-main-area-start -->
    <div class="shop-main-area">
        <!-- user-login-area-start -->
        <div class="user-login-area">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-8 col-md-12 col-12 ml-auto mr-auto">
                        {{ form_start(requestForm) }}
                        <div class="login-form">
                            <div class="single-login">
                                {{ form_label(requestForm.email) }}
                                {{ form_widget(requestForm.email,) }}
                                {{ form_errors(requestForm) }}

                            </div>
                            <div class="single-login single-login-2">
                                <button class="login-btn ">Reset</button>
                            </div>
                            <small>
                                Enter your email address and we we will send you a  link to reset your password.
                            </small>
                        </div>
                        <div>

                        </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
        <!-- user-login-area-end -->
    </div>
    <!-- shop-main-area-end -->
{% endblock %}