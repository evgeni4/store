{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
    <!-- breadcrumbs-area-start -->
    <div class="breadcrumbs-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-content text-center">
                        <h2>login</h2>
                        <ul>
                            <li><a href="/">Home /</a></li>
                            <li class="active"><a href="{{ path('app_login') }}">login</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumbs-area-end -->
    <!-- shop-main-area-start -->
    <div class="shop-main-area">
        <!-- user-login-area-start -->
        <div class="user-login-area">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-8 col-md-12 col-12 ml-auto mr-auto">
                        <form method="post">
                            <div class="login-form">
                                {% if error %}
                                    <div id="messageLogin" class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                            <div class="single-login">
                                <label>Email<span>*</span></label>
                                <input type="email" name="email" class="form-control"  autocomplete="off" >
                            </div>
                            <div class="single-login">
                                <label>Password <span>*</span></label>
                                <input type="password" name="password" class="form-control" autocomplete="off">
                            </div>
                                <input type="hidden" name="_csrf_token"  value="{{ csrf_token('authenticate') }}"/>
                                <div class="single-login single-login-2">
                                    <button  type="submit" class="login-btn ">login</button>
                                <input id="rememberme" type="checkbox" name="_remember_me">
                                <span>Remember me</span>
                            </div>
                          <a href="{{ path('app_forgot_password_request') }}">Lost your password?</a> |
                            <a href="{{ path('user_register') }}">Create new account</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- user-login-area-end -->
    </div>
    <!-- shop-main-area-end -->
{% endblock %}
