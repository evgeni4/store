{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    <!-- breadcrumbs-area-start -->
    <div class="breadcrumbs-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-content text-center">
                        <h2>register</h2>
                        <ul>
                            <li><a href="#">Home /</a></li>
                            <li class="active"><a href="#">register</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumbs-area-end -->
    <!-- shop-main-area-start -->
    <div class="shop-main-area">
        <!-- user-login-area-start -->
        <div class="user-login-area">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-10 col-md-12 col-12 ml-auto mr-auto">
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        {{ form_start(form, {'attr': {'id': 'form_register'}}) }}
                            <div class="billing-fields">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.firstName) }}
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.lastName) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.email) }}
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.phone) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-4 col-lg-4 col-md-4  col-12">
                                        <div class="form-group">
                                            {{ form_row(form.country) }}
                                        </div>
                                    </div>
                                    <div class="col-xl-4 col-lg-4 col-md-4  col-12">
                                        <div class="form-group box-load">
                                            <div id="box-loader" class=""></div>
                                            {{ form_row(form.state) }}
                                        </div>
                                    </div>
                                    <div class="col-xl-4 col-lg-4 col-md-4 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.cityTown) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.address) }}
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.postCode) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.plainPassword.first) }}
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                                        <div class="form-group">
                                            {{ form_row(form.plainPassword.second) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group form-group-3">
                                    {{ form_row(form.agreeTerms) }}
                                    <label class="inline">I agree <a href="#">Terms & Condition</a></label>
                                 </div>
                                {{ form_row(form._token) }}
                                <div class="form-group">
                                    <button id="sendReg" class="login-btn" type="submit">Register</button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="{{ asset('front-layout/js/regSelect.js') }}"></script>

        <!-- user-login-area-end -->
    </div>
{% endblock %}
