{% extends 'base.html.twig' %}

{% block title %}Update password{% endblock %}

{% block main %}
    <!-- breadcrumbs-area-start -->
    <div class="breadcrumbs-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-content text-center">
                        <h2>My Profile</h2>
                        <ul>
                            <li><a href="{{ path('user_office') }}">Dashboard /</a></li>
                            <li class="active"><a href="#">update profile</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumbs-area-end -->
    <!-- shop-main-area-start -->
    <div class="shop-main-area">
        <!-- user-login-area-start -->
        <div class="user-login-area">
            <div class="container">
                <div class="row">
                    {% block usernav %}
                        {% include 'dashboard/user.menu.html.twig' %}
                    {% endblock usernav %}
                    <div class="col-xl-9 col-lg-9 col-md-12 col-12 pull-right">
                        <div class="billing-fields">
                            {{ form_start(form) }}
                                <div class="billing-fields">
                                    <div class="row">
                                        <div class="col-xl-4 col-lg-4 col-md-4 col-12">
                                            <div class="form-group">
                                            {{ form_row(form.plainPassword) }}
                                            </div>
                                        </div>

                                    </div>
                                    {{ form_row(form._token) }}
                                    <div class="form-group">
                                        <button class="login-btn" type="submit">Update</button>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- user-login-area-end -->
    </div>
{% endblock %}


