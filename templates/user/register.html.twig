{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                <h1>Register User</h1>
                <form  method="post" class="form-horizontal">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="user[email]" autocomplete="off" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" name="user[password][first]" autocomplete="off" class="form-control"/>

                    </div>
                    <div class="form-group">
                        <label for="password">Confirm Password:</label>
                        <input type="password" name="user[password][second]" autocomplete="off" class="form-control"/>

                    </div>
                    <div class="form-group">
                        <label for="email">Full Name</label>
                        <input type="text" name="user[fullName]" class="form-control"/>
                    </div>
                    {{ form_row(form._token) }}
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary ">Register</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
{% endblock %}
